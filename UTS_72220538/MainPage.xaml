<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UTS_72220538.MainPage"
             Title="Login Page">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Username:" />
        <Entry x:Name="UsernameEntry" Placeholder="Enter your username" />

        <Label Text="Password:" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
